<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>

  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    <table class="table table-bordered">
      <% @review.each do |item| %>
        <% @total_rating += item.rating %>
      <% end %>
      <h3>Average Rating: <%= @total_rating.fdiv(@review.length)%></h3>
      <h3>Reviews</h3>
      <br>
      <thead>
        <tr>
          <th>Rating</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% @review.each do |item| %>
          <%= render 'review', review: item %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
        </tr>
      </tfoot>
    </table>

  </article>

</section>
