<!DOCTYPE html>
<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
  <body>
    <h1>Order Number: <%=@order.id %> </h1>
  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @product.each_with_index do |product, index| %>
          <tr>
            <td>
              <h4><%= product.name %></h4>
              <br>
              <p><%= product.description %></p>
            </td>
            <td>
              <%= product.price %>
            </td>
            <td>
              <%= @quantity[index] %>
            </td>
            <td>
              <%= product.price * @quantity[index] %>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <% @product.each_with_index do |item, index| %>
              <% @total_price += item.price *  @quantity[index] %>
            <% end %>
            $<%= @total_price %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
  </body>
</html>